#:kivy 1.10.0

<SnackBarButton>:

<MainContainer>:
    id: main_container
    SnackBar:
        id: snack_bar
    Manager:
        id: manager

<Manager>:
    id: manager
    pos: 80, 0
    size_hint: None, None
    size: 720, 480
    GeneralScreen:
        id: general_screen
    WeatherScreen:
        id: weather_screen
    HomeControlScreen:
        id: home_control_screen
    

<SnackBar>:
    id: snack_bar
    orientation: "vertical"
    size_hint: None, None
    size: 80, 480
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 1))
        size: 80, 80
        text: "G"
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'general'
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 2))
        size: 80, 80
        text: "W"
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'weather'
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 3))
        size: 80, 80
        text: "H"
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'home_control'
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, 0
        size: 80, 80
        on_press: 
            app.open_settings()
        Image: 
            source: "icons/config.png"
            pos: 0,0
            size: 80,80

