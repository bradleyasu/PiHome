#:kivy 1.10.0

<SnackBarButton>:

<MainContainer>:
    id: main_container
    SnackBar:
        id: snack_bar
    Manager:
        id: manager

<Manager>:
    id: manager
    pos: 80, 0
    size_hint: None, None
    size: 720, 480
    GeneralScreen:
        id: general_screen
    WeatherScreen:
        id: weather_screen
    HomeControlScreen:
        id: home_control_screen
    

<SnackBar>:
    id: snack_bar
    orientation: "vertical"
    size_hint: None, None
    size: 80, 480
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 1))
        size: 80, 80
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'general'
        Image: 
            source: "icons/general.png"
            size: 80,80
            pos: 0, (self.parent.parent.height - (80 * 1))
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 2))
        size: 80, 80
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'weather'
        Image: 
            source: "icons/weather.png"
            size: 80,80
            pos: 0, (self.parent.parent.height - (80 * 2))
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 3))
        size: 80, 80
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'home_control'
        Image: 
            source: "icons/home_control.png"
            pos: 0, (self.parent.parent.height - (80 * 3))
            size: 80,80
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, 0
        size: 80, 80
        on_press: 
            app.open_settings()
        Image: 
            source: "icons/config.png"
            pos: 0,0
            size: 80,80

<GeneralScreen>:
    id: general_screen
    name: "general"
    size_hint: None, None
    size: 720, 480
    FloatLayout:
        FloatLayout:
            id: infoBar
            Label:
                size_hint: 1.6, 0.4
                id: gweather
                text: "Checking Weather..."
                pos_hint: {'bottom': 1, 'right': 1}
                font_size: '22sp'
                outline_color: 0,0,0,0.6
                outline_width: 1
            Label:
                size_hint: 1.6, 0.2
                id: gtemp
                text: "--F"
                pos_hint: {'bottom': 1, 'right': 1}
                font_size: '72sp'
                outline_color: 0,0,0,0.6
                outline_width: 1
            Label:
                size_hint: 1.5, 0.4
                id: gdate
                text: "Loading..."
                pos_hint: {'bottom': 1, 'left': 1}
                font_size: '22sp'
                outline_color: 0,0,0,0.6
                outline_width: 1
            Label:
                size_hint: 1.5, 0.2
                id: gclock
                text: "00:00 PM"
                pos_hint: {'bottom': 1, 'left': 1}
                font_size: '72sp'
                outline_color: 0,0,0,0.6
                outline_width: 1
            Video:
                id: vplayer
                source: "test.mp4"
                opacity: 0
            FloatLayout:
                size_hint: 0.4, 0.5
                pos_hint: {'top' : 1, 'right' :1}
                RedditRising:
                    id: reddit_rising
                    pos_hint: {'top' : 1, 'right' :1}
                    GridLayout:
                        id: reddit_news
                        cols: 1
                        size_hint_y:None
                        height: self.minimum_height
<WeatherScreen>:
    name: "weather"
    size_hint: None, None
    size: 720, 480
        
<HomeControlScreen>:
    name: "home_control"
    size_hint: None, None
    size: 720, 480


<RedditLink>:
    size_hint: None,None
    Image:
        id: thumbnail
        size: 64,64
        source: "icons/general.png"
    Label:
        id: title
        pos: 70, 0
        text: "TEST HEADLINE"
