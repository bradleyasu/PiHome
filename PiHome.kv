#:kivy 1.10.0

<SnackBarButton>:

<MainContainer>:
    id: main_container
    SnackBar:
        id: snack_bar
    Manager:
        id: manager

<Manager>:
    id: manager
    pos: 80, 0
    size_hint: None, None
    size: 720, 480
    WelcomeScreen:
        id: welcome_screen 
    GeneralScreen:
        id: general_screen
    WeatherScreen:
        id: weather_screen
    HomeControlScreen:
        id: home_control_screen
    AIOScreen:
        id: aio_screen
    

<SnackBar>:
    id: snack_bar
    orientation: "vertical"
    size_hint: None, None
    size: 80, 480
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 1))
        size: 80, 80
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'general'
        Image: 
            source: "icons/general.png"
            size: 80,80
            pos: 0, (self.parent.parent.height - (80 * 1))
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 2))
        size: 80, 80
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'weather'
        Image: 
            source: "icons/weather.png"
            size: 80,80
            pos: 0, (self.parent.parent.height - (80 * 2))
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 3))
        size: 80, 80
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'home_control'
        Image: 
            source: "icons/home_control.png"
            pos: 0, (self.parent.parent.height - (80 * 3))
            size: 80,80
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, (self.parent.height - (80 * 4))
        size: 80, 80
        on_press: 
            app.root.ids.manager.transition.direction = 'down'
            app.root.ids.manager.current = 'home_control'
        Image: 
            source: "icons/spotify.png"
            pos: 0, (self.parent.parent.height - (80 * 4))
            size: 80,80
    SnackBarButton:
        color: 0,0,0,0.5
        size_hint: None, None
        pos: 0, 0
        size: 80, 80
        on_press: 
            app.open_settings()
        Image: 
            source: "icons/config.png"
            pos: 0,0
            size: 80,80

<GeneralScreen>:
    id: general_screen
    name: "general"
    size_hint: None, None
    size: 720, 480
    FloatLayout:
        FloatLayout:
            id: infoBar
            Label:
                size_hint: 1.6, 0.4
                id: gweather
                text: "Checking Weather..."
                pos_hint: {'bottom': 1, 'right': 1}
                font_size: '22sp'
                outline_color: 0,0,0,0.6
                outline_width: 1
            Label:
                size_hint: 1.6, 0.2
                id: gtemp
                text: "--F"
                pos_hint: {'bottom': 1, 'right': 1}
                font_size: '72sp'
                outline_color: 0,0,0,0.6
                outline_width: 1
            Label:
                size_hint: 1.5, 0.4
                id: gdate
                text: "Loading..."
                pos_hint: {'bottom': 1, 'left': 1}
                font_size: '22sp'
                outline_color: 0,0,0,0.6
                outline_width: 1
            Label:
                size_hint: 1.5, 0.2
                id: gclock
                text: "00:00 PM"
                pos_hint: {'bottom': 1, 'left': 1}
                font_size: '72sp'
                outline_color: 0,0,0,0.6
                outline_width: 1
            FloatLayout:
                size_hint: 0.4, 0.5
                pos_hint: {'top' : 1, 'right' :1}
                RedditRising:
                    id: reddit_rising
                    pos_hint: {'top' : 1, 'right' :1}
                    GridLayout:
                        id: reddit_news
                        cols: 1
                        size_hint_y:None
                        height: self.minimum_height
<WeatherScreen>:
    name: "weather"
    size_hint: None, None
    size: 720, 480
    on_enter: self.loadWeather()
    FloatLayout:
        size_hint: None, None
        size: 720, 480
        WeatherBox:
            id: today
            size_hint: None, None
            pos: 80, 180
            text: "Today (Now)"
            forecast: "Loading..."
            imgSource: "noData.png"
        WeatherBox:
            id: tomorrow
            size_hint: None, None
            pos: 280,180
            text: "Tomorrow (24hrs)"
            forecast: "Loading..."
            imgSource: "noData.png"
        WeatherBox:
            id: nextDay
            size_hint: None, None
            pos: 480,180
            text: "The Day After (48hrs)"
            forecast: "Loading..."
            imgSource: "noData.png"
        Label:
            size_hint: None, None
            size: self.texture_size
            id: city
            text: "Rockville"
            pos: root.width/2-self.width/2, root.y+40
            font_size: '72sp'
            outline_color: 0,0,0,0.6
            outline_width: 1

        

<HomeControlScreen>:
    name: "home_control"
    size_hint: None, None
    size: 720, 480

<AIOScreen>:
    name: "aio"
    size: 720, 480
    canvas:
        Color:
            rgba: root.color
        Rectangle:
            size: self.size
            pos: 0,0
    AsyncImage:
        source: root.imageSource
        size_hint: None, None
        size: self.texture_size
        pos: root.width/2-self.width/2, root.height/2-self.height/2
    Label:
        text: root.title
        size_hint: None, None
        size: self.texture_size
        pos: 10, root.height-self.height-10
        font_size: '40sp'
        outline_color: 0,0,0,1
        outline_width: 1
    Label:
        text: root.header
        size_hint: None, None
        size: self.texture_size
        pos: root.width/2-self.width/2, 90
        font_size: '32sp'
        outline_color: 0,0,0,1
        outline_width: 1
    Label:
        text: root.subtext
        size_hint: None, None
        size: self.texture_size
        pos: root.width/2-self.width/2, 60
        font_size: '20sp'
        outline_color: 0,0,0,1
        outline_width: 1

<WelcomeScreen>:
    name: "welcome"
    id: welcome_screen
    size_hint: None, None
    size: 720, 480
    FloatLayout:
        Label:
            text: "PiHome"
            font_size: '52sp'
        Label:
            text: "Version 2.0.0"
            font_size: '16sp'
            pos_hint: {'bottom': 1, 'left': 1}
            size_hint: 0.2, 0.1
        Label:
            text: "(C) Bradley Sheets Software 2018"
            font_size: '16sp'
            pos_hint: {'bottom': 1, 'right': 1}
            size_hint: 0.4, 0.1

<WeatherBox>:
    size_hint:None, None
    size: 150, 200
    text: "N/A"
    forecast: "--"
    imgSource: "noData.png"
    temp: "--F"
    canvas:
        Color:
            rgb: 0.1,0.1,0.1
        Line:
            width: 1.
            rectangle: (self.x, self.y, self.width, self.height)
        Color:
            rgba: 0,0,0, 0.7
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: root.text
        size_hint: None, None
        size: self.texture_size
        pos: root.center_x-self.width/2, root.y+10
        font_size: '12sp'
    Label:
        text: root.temp
        size_hint: None, None
        size: self.texture_size
        pos: root.center_x-self.width/2, root.y+50
        font_size: '20sp'
    Label:
        text: root.forecast
        size_hint: None, None
        size: self.texture_size
        pos: root.center_x-self.width/2, root.y+30
        font_size: '16sp'
    Image:
        source: "weather/"+root.imgSource
        size_hint: None, None
        size: self.texture_size
        pos: root.center_x-self.width/2, root.y+80

<RedditLink>:
    size_hint: None,None
    canvas:
        Color:
            rgba: root.color[0], root.color[1], root.color[2], root.color[3]+0.2
        Line:
            width: 1.
            rectangle: (self.x, self.y, self.width, self.height)
        Color:
            rgba: root.color
        Rectangle:
            size: self.size
            pos: self.pos
    AsyncImage:
        id: thumbnail
        size_hint: None, None
        size: 64,64
        source: root.thumbnail
        pos: root.x+2,root.y+(root.height/2 - self.height/2)
    Label:
        id: title
        size_hint:None, None
        pos: root.x+70, root.y+root.height-10-self.height
        size: self.texture_size
        font_size: '14sp'
        text: root.text
    Label:
        id: info
        size_hint:None, None
        pos: root.x+root.width-self.width-10, root.y+5
        size: self.texture_size
        font_size: '10sp'
        text: root.ups +" | "+root.source